{
	"manifest_version": 2,

	"name": "Don't Stop the Music",

	"description": "Detects when you are closing a tab with audio playing, and warns you.",

	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Don't Stop the Music"
	},
	"background":{
		"scripts": ["popup.js"]
	},
	"content_scripts":[
		{
			"matches": ["http://*/", "https://*/", "*://*/", "<all_urls>"],
			"js": ["script.js"]
		}
	],
	"permissions":[
		"https://ajax.googleapis.com/",
		"*://*/",
		"http://*/",
		"https://*/",
		"activeTab",
		"tabs",
		"webRequest",
		"webRequestBlocking"
	],

	"web_accessible_resources": ["notification.js"]
	

}